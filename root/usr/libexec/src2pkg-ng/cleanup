CLEANUP_CMDS=()

add_cleanup_cmd() {
   declare level="$1"
   declare cmd="$2"
   if (( CLEANUP_LEVEL >= level )) ; then
      push_front CLEANUP_CMDS "$cmd"
   fi
   export CLEANUP_CMDS
}

cleanup() {
   if (( ${#CLEANUP_CMDS[@]} )) ; then
      tprintf $"@summary{Cleaning up} - "
      declare cmd=""
      for cmd in "${CLEANUP_CMDS[@]}" ; do
         echo " $cmd"
         $cmd
      done
      tprintf $"@success{Done}\n"
   fi
   unset CLEANUP_CMDS
   if [[ "${1:-""}" ]] ; then
      exit $1
   fi
}

trap "cleanup 1" SIGINT ERR
